<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.display.view.getbingpicture.MainActivity">

  <ImageView
    android:id="@+id/bing_picture"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="8"
    android:scaleType="centerCrop"
    android:src="@mipmap/ic_launcher"/>

  <android.support.v7.widget.AppCompatSpinner
    android:id="@+id/resolution_spinner"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_margin="40dp"
    android:entries="@array/spinner_bing_resolution"/>

  <Button
    android:id="@+id/get_picture_okhttp"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_gravity="center_horizontal"
    android:text="@string/okhttp"
    android:textAllCaps="false"/>

  <Button
    android:id="@+id/get_picture"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_gravity="center_horizontal"
    android:text="@string/http_url_conn"
    android:textAllCaps="false"/>


</LinearLayout>
